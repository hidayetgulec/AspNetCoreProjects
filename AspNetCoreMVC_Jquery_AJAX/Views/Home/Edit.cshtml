        function Getir(id, adet){
            $.ajax({
                type:'GET',
                url:'/Home/SepeteEkle',
                data: {Id:id, Adet:adet},
                success:function(sonuc){
                    $('#sepet').html(sonuc);
                }
            });
        }

    </script>
}
